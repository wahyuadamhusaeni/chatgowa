generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  // Note: `url` is intentionally absent here. With Prisma 7 driver adapters,
  // the connection URL is configured exclusively via prisma.config.ts
  // (datasource.url) for migrations, and via the PrismaBetterSqlite3 adapter
  // in src/lib/prisma.ts for runtime queries.
}

model WebhookRoute {
  id         Int      @id @default(autoincrement())
  inboxId    Int      @unique
  webhookUrl String
  name       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
